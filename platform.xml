        <prop id="watt_per_state" value="10.0:90.0:90.0, 10.0:60.0:60.0, 10.0:30.0:30.0, 3:3:3" />
        <prop id="watt_off" value="0" />
        <prop id="host_temperature" value="20.0"/>
